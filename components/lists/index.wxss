.houseItem{
  display: flex;
  margin-bottom: 34rpx;
}
.houseItem-img{
  width: 246rpx;
  height:192rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.houseItem-img>image{
  position: absolute;
  top: 0;
  left: 0;
  width: 246rpx;
  height:192rpx;
  z-index:0;
}
.saleStatus{
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 6rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  border-radius: 6rpx;
  color: #FFFFFF;
  height: 34rpx;
  line-height: 34rpx;
  background: linear-gradient(135deg, #709EF3 0%, #3E68D2 100%);
}
.houseItem-right{
  width: 430rpx;
  padding-left: 30rpx;
}
.houseItem-name{
  height: 32rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 32rpx;
  padding-bottom: 14rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.houseItem-price{
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FA4A06;
  padding-bottom: 14rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.houseItem-addr{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #7D7D7D;
  padding-bottom: 14rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.houseItem-tag{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.houseItem-tag>label{
  margin-right: 14rpx;
  margin-bottom: 14rpx;
  padding: 0 12rpx;
  height: 38rpx;
  line-height: 38rpx;
  background: #EAF3FC;
  border-radius: 4rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  color: #89909A;
}
.houseItem-date{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #7D7D7D;
  height: 38rpx;
  line-height: 38rpx;
  background: #FFF6EC;
  background-image: url(https://sbmf.ww2ss.com/dfimages/house/z/nav_img_t2.png);
  background-position: left;
  background-size: contain;
  background-repeat:no-repeat;
  border-radius: 18rpx;
  padding-left: 54rpx;
}

/*  */
.house-ranking{
  width: 380rpx;
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 30rpx;
  margin-bottom: 10rpx;
}
.house-ranking_r{
width: 40rpx;
height: 38rpx;
color: #000000;
}
.house-ranking_r image{
  width: 100%;
  height: 100%;
}
.children text{
  color:#FBAA40;
}

.parent {
  width: 400px;
  margin: 20rpx;
}
.children {
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 16rpx;
  color: #000000;
  display: inline;
  zoom: 1;
  background-color:#fff6ec;
  color: #7D7D7D;
}
.children .time{
  letter-spacing: 4rpx;
  color: #7D7D7D;
}
