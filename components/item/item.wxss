/* components/item/item.wxss */
.box {
  margin: 20rpx;
}

.box_item {
  display: flex;
  background-color: rgb(236, 177, 177);
  padding: 20rpx;
  height: 300rpx;
  border-radius: 10rpx;
  align-items: center;
  justify-content: space-around;
}
.box_item_r{
  display: flex;
}
.box_item_l{
  display: flex;
}
/* 中间竖线 */
.box_item_r_1:after {
  content: "";
  margin-left: 10px;
  padding-left: 10px;
  border-left: 1px solid red;
  height: 32rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
}
/* 箭头 */
/* 实心 */
.arrow_01::after {
  border: 10px solid transparent;
  border-left: 10px solid #f00;
  width: 0;
  height: 0;
  position: absolute;
  content: ' ';
  transform: rotate(90deg);
}
/* 空心 */
/* 上 */
 .arrow_1 {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid red;
  border-left: 2rpx solid red;
  transform: rotate(45deg);
}
/* 右 */
.arrow_2 {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid red;
  border-left: 2rpx solid red;
  transform: rotate(135deg);
  margin-left: 20rpx;
}
/* 下 */
.arrow_3 {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid red;
  border-left: 2rpx solid red;
  transform: rotate(225deg);
  margin-left: 20rpx;
}
/* 左 */
.arrow_4 {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid red;
  border-left: 2rpx solid red;
  transform: rotate(305deg);
  margin-left: 20rpx;
}
.box1{
  margin-top: 20rpx;
}
.box1_item{
  height: 200rpx;
  background-color: rgb(154, 149, 226);
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}
