/* 弹窗内容区域部分开始 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 9999;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  /* margin: 0 20rpx; */
  bottom: 0;
}

