/**不固定间隔条高度**/
.info-timeline {
      display: block;
      background-color: #ffffff;
}
.info-item {
    padding:30rpx 30rpx 30rpx 120rpx;
    position:relative;
    display:block;
    z-index:0;
}
.info-timeline>.info-item::after {
  content: "";
  display: block;
  position: absolute;
  width: 1rpx;
  background-color: #dddddd;
  left: 60rpx;
  height: 100%;
  top: 0;
  z-index: 8;
}
.info-timeline>.info-item::before {
  font-family: "cuIcon";
  display: block;
  position: absolute;
  top: 20rpx;
  z-index: 9;
  background-color: blue;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  border: none;
  line-height: 50rpx;
  left: 36rpx;
  content: "\e763";
  color:#DBDBDB;
}
 
.text-content>view{
  color:#666666;
}
.info-text-content{
  margin-top:20rpx;
}
