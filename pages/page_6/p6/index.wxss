.box_content{
  height: auto;
  padding-top: 20rpx;
  margin-bottom: 40rpx;
   background: linear-gradient(rgba(54,106,179,1), rgba(255,0,0,0));
}
.box_title{
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}
.aside {
  display: flex;
  margin: 20rpx;
  flex-wrap: wrap;
}

.type-nav {
  width: 30.33%;
  text-align: center;
  height: 110rpx;
  background-color:#CEEFE8;
  margin: 10rpx;
  color: #000;
  font-weight: bolder;
  border-radius: 5rpx;
}

.nav_name {
  font-size: 28rpx;
  margin: 15rpx 0;
}

.nav_title {
  font-size: 22rpx;
  color:#7D8587 ;
}

.type-nav>view view {
  color: #333;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
  font-size: 34rpx;
  background-color: rgb(238, 158, 158);
}

.type-nav>view view {
  width: 48rpx;
  border-bottom: 4rpx solid transparent;
}

.selected {
  color: #fff;
 background-color: #29D3AC;
}

.selecteds{
  color:#F9F3FF;
  font-size: 22rpx;
}

.menu_content {
  margin-top: 40rpx;
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 10rpx;
}

.tab1_title {
  text-align: center;
  font-weight: bolder;
  color: #000;
  font-size: 30rpx;
  padding: 20rpx 0;
}

.tab1_content {
  font-size: 22rpx;
  color:#333;
  padding: 20rpx;
  font-weight: inherit;
}

.tab1_content_item {
  display: flex;
}

.circle {
  width: 16rpx;
  height: 16rpx;
  background-color: #b9e4d9;
  border-radius: 50%;
  display: inline-block;
  margin-right: 5px;
  margin-top: 20rpx;
}

.tab1_content_item_l {
  width: 30rpx;
}

.tab1_content_item_r {
  margin: 10rpx;
}
.subscribe-btn {
  position: fixed;
  bottom: 35%;
  left: 100%;
  margin-left: -110rpx;
  width: 90rpx;
  height: 90rpx;
  padding-left: 22rpx;
  line-height: 90rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  background-color:#00ad82;
  border-radius: 50%;
  z-index: 50;
  opacity: 0.8;
}