/* 列表 */
.list_box {
  margin: 20rpx 0;
  padding: 0 22rpx;
  background-color: #fff;
}
/* 滑动导航外层 */
.nav {
  height: 110rpx;
  width: 100%;
  line-height: 90rpx;
  font-size: 32rpx;
  white-space: nowrap;
  display: flex;
  background-color: #fff;
  box-sizing: content-box;
  margin-top: 15rpx;
}

.box_item {
  width: 100%;
  height: 80rpx;
}

.nav-item {
  width: 25%;
  text-align: center;
  display: inline-block;
  color: #A0A0A0;
  font-size: 32rpx;
  position: relative;
}

.cur:after {
  height: 6rpx;
  width: 60rpx;
  background: #1478ff;
  content: " ";
  display: block;
  position: absolute;
  /* bottom: 10rpx; */
  bottom: 0;
  left: 50%;
  margin: 0 auto 0 -30rpx;
}

.cur {
  color: #111111;
  font-weight: bolder;
  font-size: 40rpx;
}
