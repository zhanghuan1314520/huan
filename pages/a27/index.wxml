<view class="content">
  <view class="account">
    <view class="title">用户名</view>
    <view class="number"><input bindinput="username" placeholder="用户名/邮箱/手机号" placeholder-style="color:#999999;" />
    </view>
  </view>
  <view class="hr"></view>
  <view class="account">
    <view class="title">密码</view>
    <view class="number"><input bindinput="password" placeholder="请输入密码" password placeholder-style="color:#999999;" />
    </view>
  </view>
  <view class="hr"></view>
  <button class="btn" disabled="{{disabled}}" type="primary" bindtap="登录">login</button>
  <view class="operate">
    <view>
      <navigator url="../mobile/mobile">手机快速注册</navigator>
    </view>
    <view>
      <navigator url="../company/company">企业用户注册</navigator>
    </view>
    <view>找回密码</view>
  </view>
</view>