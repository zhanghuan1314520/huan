.process_box{
  padding: 20rpx 22rpx;
  margin-bottom: 140rpx;
  background-color:#fff;
}
.new-block {
  flex-direction: column;
}
.new-block .timeline {
  align-items: center;
  display: inline-flex;
  margin-left: 14rpx;
}
.timeline .yuan{
  width: 19rpx;
  height: 19rpx;
  background: #ffffff;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2px solid #4787e0;
}
.new-block .timeline ._span {
  font-size: 30rpx;
  color: #000;
  font-weight: 600;
}

.new-block .new-content {
  border-left: 4rpx solid #4787e0;
 margin: 0 0 10rpx 24rpx;
 padding-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.new-block .new-content .title {
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
  margin: 10rpx 0;
}
.new-content .zx{
  font-size: 26rpx;
  font-weight: 600;
  color: #ACACAC;
  margin: 10rpx 0;
}
.new-block .new-content .title-content {
  width: 325rpx;
  height: 202rpx;
  margin: 10rpx 0;
  border-radius: 10rpx;
  overflow: hidden;
}
.new-block .new-content .title-content image{
  width: 100%;
  height: 100%;
}

.adviser_nav_title{
  margin: 20rpx 0;
}