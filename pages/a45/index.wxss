page{
  background-color: #fff;
}
.content {
  width: 100%;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
  font-family: PingFangSC-Medium,PingFang SC;
  /* margin: 0 40rpx; */
  position: fixed;
  background-color: #fff;
  top: 0;
}

.content .scroll-Y {
  height: 100%;
}

.content .row {
  width: 100%;
  border-bottom: 1px solid #ebebeb;
}

.content .row,.content .row .sigle {
  height: 88rpx;
  display: flex;
  -webkit-box-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  align-items: center;
}

.content .row .sigle {
  width: 25%;
  font-size: 28rpx;
  font-weight: 500;
  color: #595f66;
}

.content .row .down {
  width: 40rpx;
  height: 40rpx;
  margin: 0;
}

.content .row .downs {
  color: #2b67ff;
  font-weight: 500;
}

.content .row .downs .down {
  transform: rotate(180deg);
}

.content .area-control,.content .price-control,.content .size-control {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
}

.content .area-control .select-data,.content .price-control .select-data,.content .size-control .select-data {
  height: 450rpx;
  width: 100%;
  font-size: 28rpx;
  display: flex;
  text-align: center;
}

.content .area-control .select-data .s-left,.content .price-control .select-data .s-left,.content .size-control .select-data .s-left {
  width: 24%;
  height: 100%;
  background: #fff;
}

.content .area-control .select-data .s-middle,.content .price-control .select-data .s-middle,.content .size-control .select-data .s-middle {
  width: 34%;
  height: 100%;
  background: #f5f5f5;
}

.content .area-control .select-data .s-right,.content .price-control .select-data .s-right,.content .size-control .select-data .s-right {
  width: 42%;
  height: 100%;
  background: #f5f5f5;
}

.content .area-control .select-data .scroll-view-item,.content .price-control .select-data .scroll-view-item,.content .size-control .select-data .scroll-view-item {
  width: 100%;
  height: 88rpx;
  font-weight: 400;
  color: #595f66;
  line-height: 88rpx;
}

.content .area-control .select-data .item-active,.content .price-control .select-data .item-active,.content .size-control .select-data .item-active {
  width: 100%;
  height: 88rpx;
  background: #e0ecfe;
  font-weight: 600;
  color: #2b67ff;
  line-height: 88rpx;
}

.content .area-control .confirm,.content .price-control .confirm,.content .size-control .confirm {
  width: 100%;
  height: 124rpx;
  background: #fff;
  box-shadow: 0 2px 0 0 #f0f0f0;
  font-size: 30rpx;
  display: flex;
  -webkit-box-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  align-items: center;
  border-top: 2rpx solid #f0f0f0;
}

.content .area-control .confirm .reset,.content .price-control .confirm .reset,.content .size-control .confirm .reset {
  width: 240rpx;
  height: 80rpx;
  border-radius: 50rpx;
  border: 2rpx solid #b2becc;
  text-align: center;
  font-weight: 400;
  color: #595f66;
  line-height: 80rpx;
  display: block;
  margin-right: 22rpx;
}

.content .area-control .confirm .ok,.content .price-control .confirm .ok,.content .size-control .confirm .ok {
  width: 408rpx;
  height: 80rpx;
  background: #2b67ff;
  border-radius: 50px;
  line-height: 80rpx;
  font-weight: 400;
  text-align: center;
  color: #fff;
  display: block;
}

.content .price-control .select-data .s-middle {
  width: 76%;
}

.content .price-control .select-data .s-middle .scroll-Y {
  height: 100%;
}

.content .price-control .select-data .s-middle .scroll-view-item {
  width: 100%;
  padding-left: 60rpx;
  height: 88rpx;
  font-weight: 400;
  color: #595f66;
  line-height: 88rpx;
  text-align: left;
  box-sizing: border-box;
}

.content .price-control .select-data .s-middle .serch {
  width: 100%;
  height: 120rpx;
  -webkit-box-pack: center;
  justify-content: center;
}

.content .price-control .select-data .s-middle .serch,.content .price-control .select-data .s-middle .serch .inputs {
  display: flex;
  -webkit-box-align: center;
  align-items: center;
}

.content .price-control .select-data .s-middle .serch .inputs {
  width: 80%;
  height: 80rpx;
  background: #eceef0;
  border-radius: 44rpx;
  border: 1rpx solid #dddfe0;
}

.content .size-control {
  width: 100%;
  background: #fff;
  box-sizing: border-box;
}

.content .size-control .size-content {
  padding: 40rpx;
  max-height: 422rpx;
  display: flex;
  box-sizing: border-box;
  overflow: auto;
  flex-wrap: wrap;
}

.content .size-control .size-content .span {
  padding-left: 15rpx;
  padding-right: 15rpx;
  width: 160rpx;
  height: 64rpx;
  background: #f1f3f5;
  border-radius: 32rpx;
  margin: 0 45rpx 32rpx 0;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 64rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #595f66;
  border: 2rpx solid #f1f3f5;
}

.content .size-control .size-content .span:nth-child(3n) {
  margin-right: 0;
}

.content .size-control .size-content .span-active {
  background: #eff6ff;
  font-weight: 600;
  border: 2rpx solid #2b67ff;
  color: #2b67ff;
}

.content .posa-cover {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100vh;
  background: rgba(0,0,0,.7);
}
.active_1{
  color:#2b67ff ;
}


/* www */
.bor {
  border-bottom: 2rpx solid #f0f0f0;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.timeline {
  display: flex;
  -webkit-box-align: center;
  align-items: center;
}

.timeline image {
  width: 48rpx;
  height: 48rpx;
}

.timeline .time-line-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  line-height: 48rpx;
}

.data-house {
  margin-bottom: 32rpx;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
}

.data-house,.data-house .top {
  width: 100%;
  display: flex;
}

.data-house .top {
  height: 100%;
}

.data-house .bottom {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
  color: #707680;
  margin: 24rpx 0 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: normal;
}

.data-house .house-img {
  width: 250rpx;
}

.data-house .house-img .host-photo {
  height: 192rpx;
  width: 245rpx;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: reverse;
  flex-direction: column-reverse;
  border-radius: 8rpx;
}

.data-house .house-img .host-photo .host-describe {
  display: flex;
  height: 36rpx;
  border-radius: 0rpx 8rpx 0rpx 8rpx;
}

.data-house .house-img .host-photo .host-describe .host-status {
  height: 36rpx;
  padding: 0 4rpx;
  background: linear-gradient(321deg,#2b67ff,#619efd);
  border-radius: 0rpx 0rpx 0rpx 8rpx;
  line-height: 36rpx;
  font-weight: 400;
  color: #fff;
  text-align: center;
  display: inline-block;
  font-size: 23rpx;
}

.data-house .house-img .host-photo .host-describe .host-time {
  text-align: center;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: #fff;
  background: linear-gradient(321deg,rgba(0,0,0,.2),rgba(0,0,0,.8));
  line-height: 36rpx;
  display: inline-block;
  font-size: 23rpx;
  padding: 0 6rpx;
}

.data-house .house-right {
  width: 100%;
  height: 192rpx;
  padding: 4rpx 24rpx;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
  box-sizing: border-box;
  -webkit-box-pack: justify;
  justify-content: space-between;
}

.data-house .house-right .house-des {
  width: 400rpx;
  height: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  line-height: 32rpx;
}

.data-house .house-right .house-price {
  height: 38rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #ff5637;
  line-height: 38rpx;
}

.data-house .house-right .house-addr {
  height: 24rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #868e99;
  line-height: 24rpx;
}

.data-house .house-right .house-tag ._span {
  font-size: 22rpx;
  padding: 0 8rpx;
  line-height: 40rpx;
  height: 40rpx;
  background: #ebf2fc;
  border-radius: 4rpx;
  font-weight: 400;
  color: #868e99;
  margin-right: 16rpx;
}