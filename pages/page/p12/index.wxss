.hot_box {
  margin: 20rpx 0;
  padding-left: 22rpx;
}

/* 关键代码 */
.scroll-view_H {
  display: flex;
  flex-wrap: nowrap;
}

.hot_item {
  width: 200rpx;
  height: 235rpx;
  margin-left: 20rpx;
}
/* 关键代码 */
.hot_item:nth-child(1) { 
  margin-left: 0;
}
/* 关键代码 */
.hot_item:nth-last-child(1){
 padding-right: 22rpx;
}
.hot_item_t {
  width: 200rpx;
  height: 148rpx;
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
  overflow: hidden;
}


.hot_item_t image {
  width: 100%;
  height: 100%;
}

.hot_item_b {
  flex-wrap: wrap;
  width: 200rpx;
  height: 60rpx;
  font-size: 20rpx;
  color: #000000;
  margin: 15rpx 0;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}