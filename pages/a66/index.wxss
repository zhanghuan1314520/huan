/* 自定义状态栏开始 */
.indextop{
  position: fixed;
  top: 0;
  right: 0;
  width: 750rpx;
  z-index: 9999;
}
.navstyl{
  background: #ffffff;
}
.xiangqi{
  opacity: 1;
  text-align: center;
  flex: 1;
  font-size: 30rpx;
  margin-right: 80rpx;
}
.unxiangqi{
  opacity: 0;
  text-align: center;
  flex: 1;
}
.arrow {
  width: 20rpx;
  height: 20rpx;
  border-top: 2rpx solid #fff;
  border-left: 2rpx solid #fff;
  transform: rotate(-45deg);
  margin-top: 20rpx;
}
.arrow1 {
  width: 20rpx;
  height: 20rpx;
  border-top: 2rpx solid #000;
  border-left: 2rpx solid #000;
  transform: rotate(-45deg);
  margin-top: 20rpx;
}
.content_box{
  background-color: #fff;
  padding: 0 22rpx;
  margin: 24rpx 0;
}
.ranking_box_r{
  display: flex;
  width: 100rpx;
}
.ranking_box_r_font{
  color: #000;
  font-size: 30rpx;
  margin-left: 10rpx;
}
/* 自定义状态栏结束 */


/* 背景开始 */
.bg_box {
  width: 750rpx;
  height: 474rpx;
  background-image: url(https://i.loli.net/2021/08/09/xoe6ifgADltPJWu.png);
  background-size: 100% 100%;
}
/* 背景结束 */
/* 内容开始 */
.content_box{
  text-align: center;
  font-size: 28rpx;
  padding: 40rpx 0;
}
/* 内容结束 */