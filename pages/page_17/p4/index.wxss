.list {
  padding-bottom: 28rpx;
}
.headRecommend {
  padding-bottom: 2rpx;
}

.headRecommend__inner {
  box-sizing: border-box;
  padding: 6rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 0 30rpx;
  box-shadow: 0 0 12rpx 0 hsla(0,0%,74.5%,.5);
  border-radius: 12rpx;
}

.headRecommend__left {
  line-height: 0;
  padding-left: 19rpx;
}

.headRecommend__icon,.headRecommend__left {
  width: 127rpx;
  height: 29rpx;
}

.headRecommend__line {
  width: 1rpx;
  background: #ededed;
  height: 40rpx;
  margin: 0 29rpx 0 18rpx;
}

.headRecommend__right {
  box-sizing: border-box;
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.headRecommend__swiper {
  width: 100%;
  height: 140rpx;
  font-size: 24rpx;
  color: #333;
}

.headRecommend__item {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx 0;
  flex-direction: column;
}

.headRecommend__item,.headRecommend__item-center {
  justify-content: center;
}

.headRecommend__title {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
